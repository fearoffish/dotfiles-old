#!/usr/bin/env bash
#
# Thanks to https://github.com/JunichiSugiura/tutorials/tree/main/dotfiles
#
set -e

# keep dat sudo alive
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# checking brew path to see bin file exists or not (x86 or arm64)
if [ ! -f /usr/local/bin/brew ] && [ ! -f /opt/homebrew/bin/brew ]; then
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
fi

LINE="$(brew --prefix)/bin/fish"
FILE=/etc/shells
grep -qF "$LINE" "$FILE" || echo "$LINE" | sudo tee -a "$FILE"

# dotfiles
CLONE_PATH=~/a
if [ ! -d "$CLONE_PATH" ]; then
    mkdir -p "$CLONE_PATH"
fi

# check whether dotfiles is already cloned or not
if [ ! -d "$CLONE_PATH"/dotfiles ]; then
    cd "$CLONE_PATH"
    git clone git@github.com/fearoffish/dotfiles
fi

brew bundle -v --file "$CLONE_PATH"/dotfiles/Brewfile --no-upgrade

# stow those dotfiles

if [ ! -d ~/.config ]; then
    mkdir ~/.config/
fi

stow -v -d "$CLONE_PATH"/dotfiles/packages -t $HOME fish starship lvim home wezterm gh

./macos
